OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
CHROMA_PERSIST_DIR=./chroma_db

# Scheduling configuration
# Mode: "simulated" (demo), "calendly" (real booking), or "google" (Google Calendar)
SCHEDULING_MODE=simulated

# Calendly settings (only needed if SCHEDULING_MODE=calendly)
# Get your link from: https://calendly.com/app/settings/link
CALENDLY_URL=https://calendly.com/your-username

# Google Calendar settings (only needed if SCHEDULING_MODE=google)
# Setup instructions:
# 1. Create Google Cloud project: https://console.cloud.google.com/
# 2. Enable Google Calendar API
# 3. Create Service Account (IAM & Admin > Service Accounts)
# 4. Download JSON key and save as service_account.json
# 5. Share broker's calendar with service account email (found in JSON)
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_SERVICE_ACCOUNT_FILE=service_account.json
GOOGLE_CALENDAR_ID=primary

# Broker info
BROKER_EMAIL=broker@example.com
BROKER_NAME=Jan Novak

# Enhanced RAG Configuration
# All features enabled by default - can be toggled in UI
RAG_USE_HYBRID_SEARCH=true
RAG_USE_QUERY_EXPANSION=true
RAG_USE_RERANKING=true
