# Streamlit Cloud Secrets Configuration
# Copy this content to your Streamlit Cloud app secrets
# Go to: https://share.streamlit.io/ -> Your App -> Settings -> Secrets

# Required: OpenAI API Key
OPENAI_API_KEY = "sk-your-api-key-here"

# Optional: Model configuration (defaults shown)
OPENAI_MODEL = "gpt-4o-mini"
OPENAI_EMBEDDING_MODEL = "text-embedding-3-small"

# Optional: Scheduling mode ("simulated", "calendly", or "google")
SCHEDULING_MODE = "simulated"

# Calendly settings (only if SCHEDULING_MODE = "calendly")
CALENDLY_URL = "https://calendly.com/your-username"

# Google Calendar settings (only if SCHEDULING_MODE = "google")
# GOOGLE_CALENDAR_ENABLED = "true"
# GOOGLE_CALENDAR_ID = "primary"
# For Google Calendar, you'll also need to set up service account credentials

# Broker information
BROKER_EMAIL = "broker@example.com"
BROKER_NAME = "Jan Novak"

# RAG Configuration (all enabled by default)
RAG_USE_HYBRID_SEARCH = "true"
RAG_USE_QUERY_EXPANSION = "true"
RAG_USE_RERANKING = "true"
